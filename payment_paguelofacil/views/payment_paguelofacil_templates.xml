<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="paguelofacil_form">
            <input type="hidden" name="data_set" t-att-data-action-url="tx_url" data-remove-me=""/>
            <input type="hidden" name='merchant' t-att-value='acquirer.company_id.name'/>
            <input id="acquirer_paguelofacil" type="hidden" name="acquirer" t-att-value="acquirer.id"/>
            <input type="hidden" name="paguelofacil_key" t-att-value="acquirer.paguelofacil_access_key"/>
            <input type="hidden" name='invoice_num' t-att-value='reference'/>
            <input type="hidden" name="amount" t-att-value="amount"/>
            <input type="hidden" name="currency" t-att-value="currency"/>
            <!-- Customer data -->
            <input type="hidden" name='customer_email' t-att-value='customer_email'/>
            <input type="hidden" name='customer_phone' t-att-value='customer_phone'/>
            <input type="hidden" name='customer_last_name' t-att-value='customer_last_name'/>
            <input type="hidden" name='customer_first_name' t-att-value='customer_first_name'/>
            <!-- Customer address data -->
            <input type="hidden" name='customer_city' t-att-value='customer_city'/>
            <input type="hidden" name='customer_address' t-att-value='customer_address'/>
            <input type="hidden" name='customer_postal_code' t-att-value='customer_postal_code'/>
            <input type="hidden" name='environment' t-att-value='environment'/>
        </template>
    </data>
</odoo>
